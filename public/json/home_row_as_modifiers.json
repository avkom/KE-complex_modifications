{
  "title": "Home row as modifiers when held down",
  "rules": [
    {
      "description": "Change A/S/D/F and J/K/L/; to ⇧/⌃/⌥/⌘ and ⌘/⌥/⌃/⇧ when held down",
      "manipulators": [
        {
          "description": "a+s -> left_shift+left_control when held down",
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "a"
              },
              {
                "key_code": "s"
              }
            ],
            "simultaneous_options": {
              "detect_key_down_uninterruptedly": true,
              "key_down_order": "insensitive",
              "key_up_order": "insensitive",
              "key_up_when": "any",
              "to_after_key_up": [
                {
                  "set_variable": {
                    "name": "left_modifier_held",
                    "value": 0
                  }
                }
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "left_modifier_held",
                "value": 1
              }
            },
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        },
        {
          "description": "a -> left_shift when held down",
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
            }
          },
          "to_if_alone": [
            {
              "key_code": "a"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_shift"
            }
          ],
          "to": [
            {
              "set_variable": {
                "name": "left_modifier_held",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "left_modifier_held",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_unless",
              "name": "right_modifier_held",
              "value": 1
            }
          ]
        },
        {
          "description": "s -> left_control when held down",
