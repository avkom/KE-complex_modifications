{
  "title": "Home row as modifiers when held down",
  "rules": [
    {
      "description": "Change A/S/D/F and J/K/L/; to ⇧/⌃/⌥/⌘ and ⌘/⌥/⌃/⇧ when press 2/3/4 keys simultaneously on the same side; S+V -> ⌃; D+V -> ⌥; K+M -> ⌥; L+M -> ⌃",
      "manipulators": [
        {
          "description": "a + s + d + f -> left_shift + left_control + left_option + left_command when held down",
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "a"
              },
              {
                "key_code": "s"
              },
              {
                "key_code": "d"
              },
              {
                "key_code": "f"
              }
            ],
            "simultaneous_options": {
              "detect_key_down_uninterruptedly": true,
              "key_down_order": "insensitive",
              "key_up_order": "insensitive",
              "key_up_when": "any"
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ]
        },
        {
