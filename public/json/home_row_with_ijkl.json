{
  "title": "ASDF + IJKL as arrows with modifiers",
  "rules": [
    {
      "description": "Change A/S/D/F/G + I/J/K/L/M/; to ⇧/⌃/⌥/⌘/<no modifier> + ↑/←/↓/→/⌫/⌦",
      "manipulators": [
        {
          "description": "a + s + d + f -> left_shift + left_control + left_option + left_command",
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "a"
              },
              {
                "key_code": "s"
              },
              {
                "key_code": "d"
              },
              {
                "key_code": "f"
              }
            ],
            "simultaneous_options": {
              "detect_key_down_uninterruptedly": true,
              "key_down_order": "insensitive",
              "key_up_order": "insensitive",
              "key_up_when": "any",
              "to_after_key_up": [
                {
                  "set_variable": {
                    "name": "arrow_mode",
                    "value": 0
                  }
                }
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "arrow_mode",
                "value": 1
              }
            },
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ]
        },
